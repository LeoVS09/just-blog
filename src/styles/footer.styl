@import "config.styl"
body
  footer
    height 40vh
    display flex
    position fixed
    color footer-text-color
    background footer-color
    z-index 5
    bottom 0
    left 0
    right 0
    visibility visible
    p, a
      font-size 1.5em
      margin auto
      font-family "Montserrat"
    a
      //color darken(footer-color, 20%)
      text-decoration none
      &:visited
        //color darken(footer-color, 20%)
      &:hover
        //color additional-color
      img
        height 0.7em
        margin auto 1vmin
    p
      border-bottom 2px solid footer-text-color