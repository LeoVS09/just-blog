@import 'config.styl'

html,body
  height 100%
  width 100%
  margin 0
  padding 0

body
  background-color primary

  header
    width 100%
    height 100vh
    display flex

    h1
      color textColor
      margin auto
      font-family 'Montserrat','Roboto', sans-serif
      font-weight 500
      text-transform uppercase
      letter-spacing 0.5em
      font-size 2.5em