@import 'config.styl'

highlightColor = darken(primary, 80%)

text-background(color, transitionDuratation = 0.5s)
  background linear-gradient(to right, rgba(255,255,255,0) 50%, color 50%)
  background-size 200%
  background-position 0 0
  display inline
  transition transitionDuratation ease-in-out
text-background-visible()
  background-position -100% 0

.paper
  color textColor
  position relative
  .image-wrapper
    position relative
    overflow hidden
    height 100%
    width 100%
    &:after
      content ""
      position absolute
      top 0
      right 0
      bottom 0
      left 0
  .text
    position absolute
    top 0
    z-index 2
    h1
      font-family 'Roboto Mono'
      font-size 3em
      display inline
      white-space pre-wrap
      width auto
      margin 0 auto
      position relative
      &:after
        content ""
        position absolute
        top 35%
        left 0
        background-color highlightColor
        display inline-block
        height 40%
        margin auto 0
        width 0
        transition-property width
        transition-duration hover-link-animation-duration
      span
        position relative
        z-index 3
    .paragraph
      font-size 1.2em
      font-family 'Roboto'
      font-weight lighter
      line-height 1.7
      //text-background(lighten(primary,5%))
      p
        display inline
        background-image: linear-gradient(to right, transparent 50%, highlightColor 50%);
        background-position: 0 0;
        background-size: 200% auto;
        transition: background-position 1s;
        padding 0.1em
        text-wrap pre-wrap
        white-space pre-wrap


  &:hover
    .text
      h1:after
        width 100%
      .paragraph
        color lighten(textColor,5%)
        p
          background-position: -100% 0;