
arrowSize = 50px
// TODO: style for arrows
.carousel
  overflow hidden
  position relative
  .carousel-track
    position relative
    transition-property transform
    display flex
    .carousel-slide
      position relative
      z-index 9
      height 100%
      &.carousel-slide-active
        z-index 10
  .arrow
    position absolute
    height arrowSize
    width arrowSize
    z-index 5
    top 49%
    &.left
      background-color red
      left 1vw
    &.right
      background-color blue
      right 1vw

.cards-carousel
  @extend .carousel
  overflow visible
  .cards-carousel-slide
    display none
    position absolute
    top 0
    left 0
    transition-property transform
    &.cards-carousel-slide-prev, &.cards-carousel-slide-next, &.cards-carousel-slide-active
      display block
    &.cards-carousel-slide-prev
      z-index 1
    &.cards-carousel-slide-next
      z-index 2
    &.cards-carousel-slide-active
      z-index: 3
